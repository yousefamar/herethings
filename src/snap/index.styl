@require '../common/common.styl'

#contentBox {
    -moz-transform: matrix(-1, 0, 0, 1, 0, 0);
    -webkit-transform: matrix(-1, 0, 0, 1, 0, 0);
    -o-transform: matrix(-1, 0, 0, 1, 0, 0);
}

#snapOverlay,
#canvas {
    display: block;
    position: absolute;
    left: 1px;
    top: 1px;
    width: 600px;
    height: 600px;
    -moz-border-radius: 10px;
    border-radius: 5px;
}

#snapshot {
    display: block;
    position: absolute;
    width: 600px;
}

#snapOverlay {
    display: none;
    background-color: white;
}

#canvas {

}

#snapshot {
    display: none;
    left: 1px;
    background-color: rgb(234,234,234);
}
